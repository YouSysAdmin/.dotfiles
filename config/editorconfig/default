# EditorConfig is awesome: https://EditorConfig.org
# this is my uber config that captures everything where the
# project lacks its own config file
root = true

# global config
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# make exceptions from global config

[*.{md,markdown,asciidoc,adoc}]
trim_trailing_whitespace = false

[*.{js,json,y{a,}ml,html,cwl,rb,gemspec}]
indent_style = space
indent_size = 2

[{Makefile**, **.mk}]
indent_style = tab
indent_size = 4

[*.{py,java,r,R}]
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.lua]
indent_style = space
indent_size = 2
